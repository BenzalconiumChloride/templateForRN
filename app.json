{
  "expo": {
    "name": "OneHome",
    "slug": "OneHome",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/silverlogo.png",
    "scheme": "OneHome",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
       "infoPlist": {
    "NSPhotoLibraryUsageDescription": "We need access to your photo library to let you choose an avatar."
  }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/silverlogo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.trident.onehome",
       "permissions": [
    "CAMERA",
    "READ_EXTERNAL_STORAGE",
    "WRITE_EXTERNAL_STORAGE",
    "MEDIA_LIBRARY"
  ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/silverlogo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/silverlogo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
